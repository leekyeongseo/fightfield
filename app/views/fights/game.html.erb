<!-- Uses a transparent header that draws on top of the layout's background -->
<div class="demo-layout-transparent mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
    <div class="text">
    <!-- Wide card with share menu button -->
        <style>
        .demo-card-wide.mdl-card {
        width: 700px;
        height: 450px;
        opacity: 0.8;
        font-weight: bold;
        color: black;
        font-family: 'Press Start 2P', cursive;
        border: 7px solid red;
        }
        .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 1000px;
        background: url('../assets/demos/welcome_card.jpg') center / cover;
        }
        .demo-card-wide > .mdl-card__menu {
        color: #fff;
        }
        </style>

        <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__supporting-text">
            <form action='/start_fight' method='POST' class ="border">
                <h1 class="invitation_title">INVITATION</h1>
                <span style="color:black;">To. <span class="hangul"><%= @feed.to%></span></span>
                <br>
                <div class="hangul" style='margin-top: 20px;'>
                    <span style="color:black;">너에게</span>
                    
                   <span style="color:black;"> 게임대결을 신청한다.<br><br>
                    승리조건은 다음과 같다.</span>
                </div>
                <div class="hangul" style="margin-bottom: 10px; padding: 6px; margin-top: 10px; color:black; border: 1px black solid; width: 286px; height: 86px; margin-left:25%; margin-right: 25%;"> <%=@feed.content%></div> <br>
               <span style="color:black;"> From. <span class="hangul"><%=@feed.from%> </span></span>
                <br>
                <!-- Colored raised button --><br><br>
                <a id="shareBtn" class="btn btn-success clearfix">Share</a>

            </form>
        </div>
        </div>
        
    </div>
  </main>
</div>



<script>
document.getElementById('shareBtn').onclick = function() {
    
    FB.ui({
        method: 'share_open_graph',
        action_type: 'og.shares',
        display: 'popup',
        action_properties: JSON.stringify({
            object: {
            
            'og:url': window.location.href,
            'og:title': '결투장',
            'og:description': '결투신청이 도착했습니다.',
            'og:image': 'https://img.fmnation.net/files/attach/images/3415/520/085/002/02e21c04de486fa457d02a179e5c2519.jpeg'
            }
        })
        }, function(response) {
        // Action after response
        });

 
}
</script>


